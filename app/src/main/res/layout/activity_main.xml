<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >





<!-- 底部按钮布局 -->
    <RelativeLayout
        android:id="@+id/mainBottomLayout"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/mainButtonOne"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            >

            <ImageView
                android:id="@+id/mainButtonIconOne"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_gallery"
                />


            <TextView
                android:id="@+id/mainButtonTextOne"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:text="消息"
                android:textColor="#000000"
                android:textSize="@dimen/font_size_title"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/mainButtonTwo"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_gallery"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:text="企秘"
                android:textColor="#000000"
                android:textSize="@dimen/font_size_title"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/mainButtonThree"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_gallery"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:text="我的"
                android:textColor="#000000"
                android:textSize="@dimen/font_size_title"/>

        </LinearLayout>

    </RelativeLayout>




    <android.support.v4.view.ViewPager
        android:id="@+id/mainViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mainBottomLayout"
        android:background="@color/colorPrimaryDark">
    </android.support.v4.view.ViewPager>



    </RelativeLayout>
