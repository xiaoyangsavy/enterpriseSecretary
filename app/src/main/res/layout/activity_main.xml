<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >





<!-- 底部按钮布局 -->
    <LinearLayout
        android:id="@+id/mainBottomLayout"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/bottomButtonOne"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            >

            <ImageView
                android:id="@+id/bottomImageViewOne"
                android:layout_width="match_parent"
                android:layout_height="23.3dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/common_button_message_unselect"
                />


            <TextView
                android:id="@+id/bottomTextViewOne"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="消息"
                android:textColor="#000000"
                android:textSize="10sp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottomButtonTwo"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            >

            <ImageView
                android:id="@+id/bottomImageViewTwo"
                android:layout_width="match_parent"
                android:layout_height="23.3dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/common_button_main_select"
                />


            <TextView
                android:id="@+id/bottomTextViewTwo"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="企秘"
                android:textColor="#000000"
                android:textSize="10sp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottomButtonThree"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            >

            <ImageView
                android:id="@+id/bottomImageViewThree"
                android:layout_width="match_parent"
                android:layout_height="23.3dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/common_button_user_unselect"
                />


            <TextView
                android:id="@+id/bottomTextViewThree"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="我的"
                android:textColor="#000000"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignTop="@id/mainBottomLayout"
        android:background="@color/colorLimit" />




    <android.support.v4.view.ViewPager
        android:id="@+id/mainViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mainBottomLayout"
        android:background="@color/colorWhite">
    </android.support.v4.view.ViewPager>



    </RelativeLayout>
